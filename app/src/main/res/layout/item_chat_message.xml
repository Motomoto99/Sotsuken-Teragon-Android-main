<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="12dp">

    <TextView
        android:id="@+id/textDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023/11/20(月)"
        android:textColor="#404040"
        android:textSize="12sp"
        android:background="@drawable/bg_date_header"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/new_splash_icon"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDateHeader" />

    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        android:textColor="#404040"
        android:textSize="14sp"

        android:background="@drawable/bg_chat_bubble"
        android:padding="12dp"

        android:layout_marginStart="8dp"

        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_max="240dp"

        app:layout_constraintStart_toEndOf="@+id/imageIcon"
        app:layout_constraintTop_toTopOf="@+id/imageIcon" />
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textSize="10sp"
        android:textColor="#404040"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/textContent"
        app:layout_constraintBottom_toBottomOf="@+id/textContent" />

</androidx.constraintlayout.widget.ConstraintLayout>